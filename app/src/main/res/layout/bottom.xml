<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="55dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:id="@+id/id_tab_home"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/id_tab_home_img"
            android:clickable="false"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/home_tab_normal"
            android:background="#00000000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_map"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_map_img"
            android:clickable="false"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/map_tab_normal"
            android:background="#00000000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_discover"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_discover_img"
            android:clickable="false"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/discover_tab_normal"
            android:background="#00000000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_myInfo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_myInfo_img"
            android:clickable="false"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/myinfo_tab_normal"
            android:background="#00000000"/>
    </LinearLayout>
</LinearLayout>